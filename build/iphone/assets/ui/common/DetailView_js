function DetailView(){var e=Ti.Platform.osname,t=Ti.UI.createView({backgroundImage:"images/bg.png"}),n=Ti.UI.createLabel({top:"10dp",left:"5dp",width:"auto",height:"auto",font:{fontWeight:"bold",fontSize:18},textAlign:Ti.UI.TEXT_ALIGNMENT_CENTER,color:"#333"});t.add(n);var r=Ti.UI.createScrollView({contentWidth:"auto",contentHeight:"600dp",showVerticalScrollIndicator:!0,top:"70dp",width:"100%"});t.add(r);var i=Ti.UI.createImageView({top:e=="iphone"||e=="ipad"?"0dp":"-100dp",width:"90%",height:"auto"});r.add(i);var s=Ti.UI.createLabel({top:"45dp",left:"5dp",width:"auto",height:"auto",textAlign:Ti.UI.TEXT_ALIGNMENT_LEFT,color:"#333"});t.add(s);var o=Ti.UI.createTextArea({top:e=="iphone"||e=="ipad"?"175dp":"200dp",font:{fontSize:14},editable:!1,width:"100%",height:"auto",color:"#000",backgroundColor:"transparent"});r.add(o);var u=Ti.UI.createLabel({top:"345dp",font:{fontSize:14},width:Ti.UI.SIZE,height:Ti.UI.SIZE,color:"blue"});return r.add(u),t.showTitle=function(e){n.setText(e)},t.showDate=function(e){s.setText(e)},t.showArticle=function(e){o.setValue(e)},t.showImage=function(e){i.setImage(e)},t.showLink=function(e){u.setText(e)},u.addEventListener("click",function(){Ti.API.info("You clicked.."+u.text),Ti.Platform.openURL(u.text)}),t}module.exports=DetailView