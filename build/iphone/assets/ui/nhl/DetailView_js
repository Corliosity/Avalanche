function DetailView(){var e=Ti.UI.createView({backgroundImage:"images/bg.png"}),t=Ti.UI.createLabel({top:"10dp",left:"5dp",width:"auto",height:"auto",font:{fontWeight:"bold",fontSize:18},textAlign:Ti.UI.TEXT_ALIGNMENT_CENTER,color:"#333"});e.add(t);var n=Ti.UI.createImageView({right:"3dp",top:"12dp"});e.add(n);var r=Ti.UI.createScrollView({contentWidth:"auto",contentHeight:"600dp",showVerticalScrollIndicator:!0,top:"70dp",width:"100%"});e.add(r);var i=Ti.UI.createLabel({top:"75dp",left:"5dp",width:"auto",height:"auto",textAlign:Ti.UI.TEXT_ALIGNMENT_LEFT,color:"#333"});e.add(i);var s=Ti.UI.createTextArea({top:"30dp",font:{fontSize:14},editable:!1,width:"100%",height:"auto",color:"#000",backgroundColor:"transparent"});r.add(s);var o=Ti.UI.createLabel({top:"220dp",font:{fontSize:14},width:Ti.UI.SIZE,height:Ti.UI.SIZE,color:"blue"});return r.add(o),e.showTitle=function(e){t.setText(e)},e.showDate=function(e){i.setText(e)},e.showArticle=function(e){s.setValue(e)},e.showLink=function(e){o.setText(e)},o.addEventListener("click",function(e){Ti.Platform.openURL(e.source.text)}),e}module.exports=DetailView